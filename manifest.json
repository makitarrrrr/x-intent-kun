{
  "manifest_version": 3,
  "name": "X Intentくん",
  "version": "1.0.0",
  "description": "X/Twitter投稿用のIntent URLを簡単に生成。定型文・ハッシュタグのテンプレート管理機能付き。",
  "author": "X Intentくん Team",
  "homepage_url": "https://github.com/[YOUR_USERNAME]/x-intent-kun",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X Intentくん",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}